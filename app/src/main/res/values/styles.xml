<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextBase</item>
    </style>
    <style name="AppTextView.ConnectionState" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTextView.Tabs" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTextView.Weather" parent="@style/TextAppearance.AppCompat">

    </style>

    <style name="AppTextView.Weather.Place" >
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTextView.Weather.Value" >
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTextView.Weather.Value.Other" >
        <item name="android:textSize">15sp</item>
    </style>


</resources>
